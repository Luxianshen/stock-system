<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:massy="http://www.smarabbit.org/schema/massy"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.smarabbit.org/schema/massy
        http://www.smarabbit.org/schema/massy.xsd">

	<!-- 引入服务 -->
    <massy:annotation-driven/>
    <massy:import-transactionmanager id="transactionManager" alias="commons.transactionManager"/>
    <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true"/>

    <bean id="applyService" class="com.zjht.inventory.stock.service.ApplyServiceImpl"/>
    <bean id="todoService" class="com.zjht.inventory.stock.service.TodoServiceImpl"/>

    <bean id="warehouseService" class="com.zjht.inventory.stock.service.WarehouseServiceImpl"/>
    <bean id="checkPlanService" class="com.zjht.inventory.stock.service.CheckPlanServiceImpl"/>

    <bean id="materialService" class="com.zjht.inventory.stock.service.MaterialServiceImpl"/>
    
     <bean id="checkDetailService" class="com.zjht.inventory.stock.service.CheckDetailServiceImpl"/>

    <bean id="dictionaryService" class="com.zjht.inventory.stock.service.DictionaryServiceImpl"/>
</beans>